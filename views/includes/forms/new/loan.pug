p
    label(for="book_id") Book
    select(id="book_id")
        each book in rows.books
            option(value=`$book.id}`)= book.title
p
    label(for="patron_id") Patron
    select(id="patron_id")
        each patron in rows.patrons
            option(value=`${patron.id}`)= (patron.first_name + ' ' + patron.last_name)
p
    label(for="loaned_on") Loaned on:
    input(id="loaned_on" type="text" value=`${new Date()}`)

p
    label(for="return_by") Return by:
    input(id="return_by" type="text" value=`${new Date(new Date().setDate(new Date().getDate() + 7))}`)
