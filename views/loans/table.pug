extends ../layout
block title
    -let _title = `${(filter === 'All') ? '' : filter + ' '}Loans`;
    -_title     = `${(filter === 'Checked Out') ? filter + ' Books' : _title}`
    title= _title
block header
    h1= _title
    p: a(href="/loans/new", class="button", class="button") Create New Loan
block content
    // set filter for pagination links (to match table filter route)
    -filter = filter === 'Checked Out' ? 'checked' : filter.toLowerCase();
    include ../includes/filters
    include includes/table
    include ../includes/pagination
    +filters('loans')
    +loanHistory(data)
    +pagination('loans', filter, total, perPage)
